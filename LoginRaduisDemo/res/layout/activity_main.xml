<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

   <Button 
       android:id="@+id/facebook_native_login_button"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:text="@string/facebook_native_login_button_text"
       android:layout_centerInParent="true"/>
   <Button 
       android:id="@+id/listview_login_button"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:text="@string/listview_login_button_text"
       android:layout_centerInParent="true"
       android:layout_below="@id/facebook_native_login_button"/>
</RelativeLayout>
